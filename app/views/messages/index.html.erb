<h1>Messages</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>From</th>
      <th>Content</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.from %></td>
        <td><%= message.content %></td>
        <td><%= link_to 'Show', { controller: 'messages', action: 'show', id: message.id } %></td>
        <td><%= link_to 'Destroy', { controller: 'messages', action: 'destroy', id: message.id }, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
