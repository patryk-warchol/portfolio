<div class="text-center">
  <h1>Mes compétences</h1>
</div>
  
<% @technologies.each do |technology| %>
  <%= link_to controller: 'technologies', action: 'show', id: technology.id do %>
    <div class="col-md-4 text-center">
      <div class="panel panel-default">
        <div class="panel-body technology-card">
          <div class="col-md-4">
            <%= image_tag(technology.logo.to_s, class: "technology-card-logo") %>
          </div>
          <div class="col-md-8">
            <div class="col-md-12 technology-card-name">
              <%= technology.name %>
            </div>
            <div class="col-md-12 technology-card-xp-pro">
              <span class="label label-success"><%= pluralize(technology.xp_pro, "an") %> d'expérience</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>