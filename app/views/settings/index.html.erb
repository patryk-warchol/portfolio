<h1>Settings</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.name %></td>
        <td><%= setting.value %></td>

        <td><%= link_to 'Show', { controller: 'settings', action: 'show', id: setting.id } %></td>
        <td><%= link_to 'Edit', { controller: 'settings', action: 'edit', id: setting.id } %></td>
        <td><%= link_to 'Destroy', { controller: 'settings', action: 'destroy', id: setting.id }, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Setting', { controller: 'settings', action: 'new' } %>
